extends layout

block content
    if (!user)
        .container
            h1 Admin Login
            form(id="formsLogin" role='form', action="/login",method="post", style='max-width: 300px;')
                .form-group
                    input.form-control(type='text', name="username", placeholder='User')
                .form-group
                    input.form-control(type='password', name="password", placeholder='Password')
                button.btn.btn-success(type='submit' style="margin: 10px;") Login
                a.btn.btn-danger(href="/" type="button") Cancel

    if (user)
        a.btn.btn-success(href="/logout" style="margin: 10px;") Logout
        a.btn.btn-danger(href="/" type="button") Cancel